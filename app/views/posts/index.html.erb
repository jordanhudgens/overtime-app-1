<h1>Posts</h1>

<div class="container">

  <table class="table table-strip table-hover">

    <thead>
      <tr>
        <th>#</th>
        <th>Date</th>
        <th>User</th>
        <th>Rational</th>
      </tr>
    </thead>

    <tbody>
	<% @posts.each do |post| %>
      <tr>
      	<td><%= post.id %></td>
        <td><%= post.date %></td>
        <td><%= post.user.last_name %></td>
        <td><%= truncate(post.rational) %></td>
      </tr>
	<% end %>
    </tbody>

  </table>

</div>


