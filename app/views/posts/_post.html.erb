<% @posts.each do |post| %>
  <tr>
    <td><%= post.overtime_request %></td>
  	<td><%= post.id %></td>
    <td><%= post.date %></td>
    <td><%= link_to post.user.full_name, post_path(post) %></td>
    <td><%= truncate(post.rational) %></td>
    <td>
        <%#= render partial: 'shared/status', locals: { object: post } %> <!--not used-->
        <%= status_label(post.status) %>
    </td>
          <td><%= link_to "Edit", edit_post_path(post), id:"edit_#{post.id}" if policy(post).update? %></td>
      <%#= link_to "Edit", edit_post_path(post), id: post.id %>
      <%#= link_to "Edit", edit_post_path(post) %>
     
    <td><%= link_to "Delete", post_path(post), method: :delete, 
    	data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

